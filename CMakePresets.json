{
    "version": 3,
    "cmakeMinimumRequired": { "major": 3, "minor": 19, "patch": 0 },
  
    "configurePresets": [
      {
        "name":       "native",
        "generator":  "Unix Makefiles",
        "binaryDir":  "build/native",
        "description":"Host build (gcc/g++)"
      },
      {
        "name":       "avr",
        "generator":  "Unix Makefiles",
        "binaryDir":  "build/avr",
        "description":"Cross-compile for ATmega328p",
        "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "cmake/toolchains/avr-gcc.cmake"
        }
      },
      {
        "name": "stm32-f410rb",
        "generator": "Unix Makefiles",
        "binaryDir": "build/stm32-f410rb",
        "description": "Cross-compile for STM32F410RB Nucleo",
        "cacheVariables": {
          "CMAKE_TOOLCHAIN_FILE": "cmake/toolchains/arm-none-eabi-gcc.cmake"
        }
      }
    ],  
    "buildPresets": [
      {
        "name":            "native",
        "configurePreset": "native",
        "description":     "Build the native configuration"
      },
      {
        "name":            "avr",
        "configurePreset": "avr",
        "description":     "Build the AVR configuration"
      },
      {
        "name":            "stm32-f410rb",
        "configurePreset": "stm32-f410rb",
        "description":     "Build the STM32F410RB configuration"
      }
    ]
  }
  
  