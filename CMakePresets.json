{
    "version": 3,
    "cmakeMinimumRequired": { "major": 3, "minor": 19, "patch": 0 },
  
    "configurePresets": [
        {
            "name": "native",
            "binaryDir": "build/native",
            "description": "Host build for unit tests"
        },
        {
            "name": "avr-arduino-nano",
            "binaryDir": "build/avr-arduino-nano",
            "description": "Arduino Nano (ATmega328P)",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "cmake/toolchains/avr-gcc.cmake",
                "BOARD": "arduino-nano",
                "EXAMPLES": "basic_example"
            }
        },
        {
            "name": "stm32-f410rb",
            "binaryDir": "build/stm32-f410rb",
            "description": "STM32F410RB development board",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "cmake/toolchains/arm-none-eabi-gcc.cmake",
                "BOARD": "f410rb",
                "EXAMPLES": "basic_example"
            }
        }
    ],
    
    "buildPresets": [
        { "name": "native", "configurePreset": "native" },
        { "name": "avr-arduino-nano", "configurePreset": "avr-arduino-nano" },
        { "name": "stm32-f410rb", "configurePreset": "stm32-f410rb" }
    ]
}